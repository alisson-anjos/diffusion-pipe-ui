@using DiffusionPipeInterface.ViewModels
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Monitoring Configurations</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudGrid>
            <MudItem xs="3">
                <MudSwitch T="bool" @bind-Value="TrainConfiguration.MonitoringConfiguration.EnableWandb" Color="Color.Primary" Disabled="Locked" Label="Enable Wandb" />
            </MudItem>
            <MudItem xs="3">
                <MudTextField @bind-Value="TrainConfiguration.MonitoringConfiguration.WandbRunName" Label="Wandb Run Name" Disabled="Locked" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="3">
                <MudTextField @bind-Value="TrainConfiguration.MonitoringConfiguration.WandbTrackerName" Label="Wandb Tracker Name" Disabled="Locked" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="3">
                <MudTextField InputType="InputType.Password" @bind-Value="TrainConfiguration.MonitoringConfiguration.WandbApiKey" Label="Wandb Tracker Name" Disabled="Locked" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
@code {
    [Parameter]
    public TrainConfigurationViewModel TrainConfiguration { get; set; } = null!;

    [Parameter]
    public bool Locked { get; set; } = false;
}