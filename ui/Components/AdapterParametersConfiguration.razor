@using DiffusionPipeInterface.ViewModels
@using DiffusionPipeInterface.Utils
@using Enums
@inject IDialogService DialogService
@inject IJSRuntime JSRuntime

<MudCard Outlined="true" Elevation="3" Class="my-2">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Adapter Configurations</MudText>
        </CardHeaderContent>
       @*  <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Outlined.Refresh" Color="Color.Default" />
        </CardHeaderActions> *@
    </MudCardHeader>
    <MudCardContent>
        <MudGrid>
            <MudItem xs="4">
                <MudNumericField Required @bind-Value="TrainConfiguration.AdapterConfiguration.Rank" Label="Rank" Disabled="Locked" Variant="Variant.Outlined"></MudNumericField>
            </MudItem>
            <MudItem xs="4">
                <MudSelect T="Dtype" Required @bind-Value="TrainConfiguration.AdapterConfiguration.Dtype" Label="Dtype" FullWidth="true" Disabled="Locked" Variant="Variant.Outlined">
                    @foreach (Dtype item in Enum.GetValues(typeof(Dtype)))
                    {
                        <MudSelectItem Value="@item">@item</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="4">
                <MudTextField @bind-Value="TrainConfiguration.AdapterConfiguration.InitFromExisting" Label="Init from Existing" Disabled="Locked" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Info" OnAdornmentClick=@(() => OpenDialogAsync(Tooltips.InitFromExisting))></MudTextField>
            </MudItem>
        </MudGrid>

    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    [EditorRequired]
    public TrainConfigurationViewModel TrainConfiguration { get; set; } = null!;

    [Parameter]
    public bool Locked { get; set; } = false;

    private Task OpenDialogAsync(string message)
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Large };

        var parameters = new DialogParameters<InfoDialog>
        {
            { x => x.Message, message }
        };

        return DialogService.ShowAsync<InfoDialog>("Info", parameters, options);
    }

    private void RedirectToLink(string link)
    {
        JSRuntime.InvokeVoidAsync("openNewTab", link);
    }
}
